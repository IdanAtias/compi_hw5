int getIdOffset(const string& id){
	//cout << "looking for " << id << endl;
	for(int i=0; i < ; ++i){
		vector<Symbol>::iterator symbol = find(symbols.begin(), symbols.end(), Symbol(id, 0, 0, currentScope-i));
		if(symbol != symbols.end()){
			return symbol->getOffset();
		}
	}
	return -1;
}

